#include<iostream>
using namespace std;
inline void addition(int a,int b)
{
	cout<<"Addition of two numbers "<<a<<" and "<<b<<endl;
	cout<<"Result="<<a+b<<endl;
}
inline void subtraction(int a,int b)
{
	cout<<"Subtraction of two numbers "<<a<<" and "<<b<<endl;
	cout<<"Result="<<a-b<<endl;
	
}
inline void multiplication(int a,int b)
{
	cout<<"Multiplication of two numbers "<<a<<" and "<<b<<endl;
	cout<<"Result="<<a*b<<endl;
	
}
inline void division(int a,int b)
{
	cout<<"Division of two numbers "<<a<<" and "<<b<<endl;
	cout <<"Result:"<<a/b;
	
}
 int main()
 {
 	int n1,n2,n,a;
 	do
 	{
	cout<<"***********SIMPLE CALCULATOR*****************"<<endl;
 	cout<<"Enter the number 1:";
 	cin>>n1;
 	cout<<"Enter the number 2:";
 	cin>>n2;
 	cout<<"Enter the operation which you want to perform"<<endl;
 	cout<<"1.Adddition\n2.Subtraction\n3.Multiplication\n4.Division";
 	cin>>n;
 	switch(n)
 	{
 	   case 1:
		  addition(n1,n2);
		  break;
	   case 2:
	      subtraction(n1,n2);
		  break;
	    case 3:
	      multiplication(n1,n2);
		  break;
		case 4:
		  division(n1,n2);
		  break;  
		default:
		   cout<<"Invalid choise!"<<endl;  
		   	  	  	
	}
	cout<<"Do you want to exit enter 1!!! or else enter any number!!!"<<endl;
	cin>>a;
   }while(a!=1);
 return 0;
}
